<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/edit_round"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/ll2"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/likehpname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/yanolja"
                    android:text="병원이름"
                    android:textColor="#000000"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/likehpaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_below="@+id/likehpname"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/yanolja"
                    android:text="선생님이름"
                    android:textColor="#000000"
                    android:textSize="20dp" />



                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/stateimg"
                    android:src="@drawable/res_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="73dp"
                    android:layout_marginRight="25dp"
                    android:textColor="#000000"
                    android:id="@+id/statename"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:text="문의"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/res_state"
                    android:text="예약접수"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/res_who"
                    android:text="예약 대상"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/recode"
                    android:text="rcode"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
