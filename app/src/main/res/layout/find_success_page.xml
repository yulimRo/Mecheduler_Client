<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_round"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="140dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/yanolja"
                android:text="회원 정보 찾기"
                android:textColor="#000000"
                android:textSize="45dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mainlogo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/findresult"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찾기 결과"
                android:fontFamily="@font/yanolja"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>


        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round_main"
            android:gravity="center">

            <TextView
                android:layout_width="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="right"
                android:layout_margin="20dp"
                android:fontFamily="@font/yanolja"
                android:text="찾은 정보"
                android:textColor="#000000"
                android:id="@+id/find_kinds"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/find_value"
                android:layout_width="160dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:fontFamily="@font/yanolja"
                android:gravity="left"
                android:text="찾은 정보 값"
                android:textColor="#000000"
                android:textSize="25dp" />
        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="안전한 정보 보안을 위해 정보를 자주 변경해주세요"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 페이지로 가기"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:id="@+id/goLogin"
            android:background="@drawable/edit_round_main_full"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>