<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="메케줄러"
            android:fontFamily="@font/yanolja"
            android:textColor="#000000"
            android:textSize="60dp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mainlogo"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="@font/yanolja"
        android:textSize="20dp"
        android:textColor="#000000"
        android:hint="아이디" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/yanolja"
        android:textColor="#000000"
        android:textSize="20dp"
        android:hint="비밀번호" />

    <Button
        android:id="@+id/btn_log_in"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/edit_round_main"
        android:baselineAligned="false"
        android:fontFamily="@font/yanolja"
        android:textSize="30dp"
        android:text="로그인" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/check"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/btn_uncheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/uncheck" />
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="로그인 상태 유지" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_find_id"
            android:fontFamily="@font/yanolja"
            android:id="@+id/find_value"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="아이디/비밀번호 찾기" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onClick_sign_up"
            android:textColor="#000000"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:text="회원가입" />
    </LinearLayout>
</LinearLayout>