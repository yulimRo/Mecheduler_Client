<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/drawerView"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반갑습니다"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true">
        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:id="@+id/genter_icon"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손종건 님"
            android:textSize="30dp"
            android:id="@+id/drawer_name"
            android:fontFamily="@font/yanolja"
            android:layout_marginTop="85dp"

            android:textColor="#000000"
            android:layout_marginLeft="100dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메케줄러와 함께 활기찬 하루 시작하세요"
            android:fontFamily="@font/yanolja"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="190dp"
            android:background="#000000">
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/healthcare_hospital4"
            android:layout_marginTop="208dp"
            android:layout_marginLeft="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병원 / 약국 찾기"

            android:fontFamily="@font/yanolja"
            android:textSize="20dp"

            android:textColor="#000000"
            android:id="@+id/text_search"
            android:layout_marginTop="208dp"
            android:layout_marginLeft="44dp"
            android:onClick="onClick_search">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="250dp">
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/healthcare_hospital2"
            android:layout_marginTop="278dp"
            android:layout_marginLeft="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료 예약"
            android:textColor="#000000"

            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:id="@+id/text_reservation"
            android:layout_marginTop="278dp"
            android:layout_marginLeft="44dp"
            android:onClick="onClick_appointment">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="320dp">
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/healthcare_hospital7"
            android:layout_marginTop="348dp"
            android:layout_marginLeft="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료 현황"

            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:id="@+id/text_status"
            android:textColor="#000000"
            android:layout_marginTop="348dp"
            android:layout_marginLeft="44dp"
            android:onClick="onClick_status">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="390dp">
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/healthcare_hospital6"
            android:layout_marginTop="418dp"
            android:layout_marginLeft="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보변경"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/text_prescription"
            android:layout_marginTop="418dp"
            android:layout_marginLeft="44dp"
            android:onClick="onClick_prescription">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="460dp">
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:fontFamily="@font/yanolja"
            android:textSize="20dp"
            android:id="@+id/nav_logout"
            android:layout_marginTop="566dp"
            android:layout_centerHorizontal="true"
            android:onClick="onClick_log_out">
        </TextView>
    </RelativeLayout>

</LinearLayout>