<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="진료 예약 확인"
            android:fontFamily="@font/yanolja"
            android:textColor="#000000"
            android:textSize="37dp"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="병원명"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/confirmhp"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="진료 희망 선생님"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/confirmDoctor"
                    android:layout_width="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="진료 희망 날짜"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/confirmDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="날짜 선택"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="희망 진료 시간"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/confirmTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="진료선택"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <TextView
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text="희망 진료 과목"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/confirmSubject"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <Button
                    android:id="@+id/reservation_go"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent"
                    android:baselineAligned="false"
                    android:layout_margin="30dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#ffffff"
                    android:text="예약하기"
                    android:textSize="25dp" />

            </LinearLayout>


        </LinearLayout>


</LinearLayout>