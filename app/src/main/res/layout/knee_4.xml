<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/toolbar"
            android:background="@android:color/black" />

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="무릎 / 발 통증" />
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="4. 학생이고, 운동도 평소에 꾸준히 해왔는데 갑자기 무릎 앞쪽이 아파서 운동을 못하겠어요"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="예상원인"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="무릎 통증이 발생하면 관절염을 떠올리는 경우가 많으나, 실제로는 관절 주변의 힘줄이나 인대로 부터 오는 통증이 더 많습니다. 활동이 많은 청년기에 점프나 반복적인 무릎의 움직임을 요구하는 운동 (농구, 자전거 등)을 심하게 즐길 경우 무릎을 지탱하는 슬개골과 연결된 슬개골 힘줄에 과도한 힘이 가해져 슬개골하건염이 발생할 수 있습니다. 또 다른 원인으로는 태어날 때 갖고 있던 추벽이라는 무릎관절 내 구조물이 적절한 시기에 없어져야 하는데, 계속 남아 있을 경우 통증을 일으키는 경우가 간혹 있습니다."
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="감별 진단"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="퇴행성관절염, 반월상연골판파열, 슬개골연골연화증, 거위발점액낭염, 무릎측부인대손상, 슬개골하건염, 추벽증후군"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/knee_3"/>
    </LinearLayout>
</ScrollView>