<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="40dp"
            android:padding="15dp"
            android:background="@drawable/edit_round_main"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원가입"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="50dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mainlogo"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:textColor="#000000"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="아이디" />

                <EditText
                    android:id="@+id/joinID"
                    android:layout_width="145dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:hint="아이디" />

                <Button
                    android:id="@+id/idconfirm"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:background="@drawable/edit_round_main_full"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="160dp"
                    android:textColor="#ffff"
                    android:gravity="center"
                    android:text="중복확인" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="비밀번호" />

                <EditText
                    android:id="@+id/joinPwd"
                    android:layout_width="209dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:inputType="textPassword"
                    android:hint="비밀번호" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="비밀번호확인" />

                <EditText
                    android:id="@+id/joinPwdConfirm"
                    android:layout_width="209dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:inputType="textPassword"
                    android:hint="비밀번호화인" />
                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="이름" />

                <EditText
                    android:id="@+id/joinName"
                    android:layout_width="130dp"
                    android:layout_row="3"
                    android:textColor="#000000"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:hint="이름" />
                <Spinner
                    android:id="@+id/joinGender"
                    android:layout_width="95dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="140dp"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:hint="성별" />


                <TextView
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/yanolja"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="생년월일" />

                <EditText
                    android:id="@+id/joinBirth"
                    android:layout_width="209dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:inputType="date"
                    android:hint="yyyy-mm-dd" />

                <TextView
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:textColor="#000000"
                    android:inputType="phone"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:text="핸드폰 번호" />


                <EditText
                    android:id="@+id/joinTel"
                    android:layout_width="145dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:hint="( - ) 생략" />
                <Button
                    android:id="@+id/sendNum"
                    android:layout_width="wrap_content"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textColor="#ffff"
                    android:background="@drawable/edit_round_main_full"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="160dp"
                    android:gravity="center"

                    android:text="인증번호 확인" />

                <EditText
                    android:id="@+id/verify"
                    android:layout_width="150dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/yanolja"
                    android:textSize="20dp"
                    android:hint="인증코드" />



            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_round_main"
                    android:baselineAligned="false"
                    android:fontFamily="@font/yanolja"
                    android:textSize="30dp"
                    android:text="회원가입" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/goToLoginPage"
                android:fontFamily="@font/yanolja"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="로그인 페이지로 가기" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>